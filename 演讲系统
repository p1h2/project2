#include<iostream>
#include"管理系统.h"
#include<stdlib.h>
using namespace std;
int main()
{
	srand(time(NULL));
	manager fk;
	while (true)
	{
		fk.menu();
		cout << "请选择：";
		int select;
		cin >> select;
		switch (select)
		{

		case 1:
			fk.creatpeople();
			fk.star();
			fk.speech(); 
			fk.promotion(); //第一次比赛

			fk.number = 2;  //第二次比赛
			fk.star();
			fk.speech();
			fk.victory();
			fk.save();
			break;
		case 2:
			fk.read();
			break;
		case 3:

		case 4:
			break;
		case 0:

			cout << "欢迎下次光临";
			exit(0);
			break;
		}
	}
}
